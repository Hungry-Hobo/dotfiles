! Use a nice truetype font and size by default... 
xterm*faceName: DejaVu Sans Mono Book
xterm*faceSize: 11

! Every shell is a login shell by default (for inclusion of all necessary environment variables)
xterm*loginshell: true

! I like a LOT of scrollback...
xterm*savelines: 16384

! double-click to select whole URLs :D
xterm*charClass: 33:48,36-47:48,58-59:48,61:48,63-64:48,95:48,126:48

! foreground
xterm*foreground: rgb:f3/f4/f5
! background
xterm*background: rgb:2f/34/3f
! black
xterm*color0: rgb:1d/20/21
! red
xterm*color1: rgb:cc/24/1d
! green
xterm*color2: rgb:98/97/1a
! orange
xterm*color3: rgb:d6/5d/0e
! blue
xterm*color4: rgb:45/85/88
! purple
xterm*color5: rgb:b1/62/86
! teal
xterm*color6: rgb:68/9d/6a
! gray
xterm*color7: rgb:92/83/74
! dark gray
xterm*color8: rgb:50/49/45
! light red
xterm*color9: rgb:fb/49/34
! light green
xterm*color10: rgb:b8/bb/26
! yellow
xterm*color11: rgb:fa/bd/2f
! light blue
xterm*color12: rgb:83/a5/98
! light purple
xterm*color13: rgb:d3/86/9b
! light teal
xterm*color14: rgb:8e/c0/7c
! white
xterm*color15: rgb:f3/f4/f5

! stop output to terminal from jumping down to bottom of scroll again
xterm*scrollTtyOutput: false

! rofi settings
rofi.lines: 5

